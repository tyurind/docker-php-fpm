#!/bin/sh
set -e

# first arg is `-f` or `--some-option`
if [ "${1#-}" != "$1" ]; then
    set -- php-fpm "$@"
fi

if [ "${1}" = "php" -o "${1}" = "php-fpm" ]; then
    if [ "x${PHP_INSTALL_XDEBUG}" = "xtrue" ]; then
        exec_cmd="${1}"
        shift
        set -- "$exec_cmd" -d "zend_extension=xdebug.so" "$@"
    fi
fi

exec "$@"

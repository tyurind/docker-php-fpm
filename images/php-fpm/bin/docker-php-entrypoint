#!/bin/sh
set -e

# first arg is `-f` or `--some-option`
if [ "${1#-}" != "$1" ]; then
    set -- php-fpm "$@"
fi

# if [ "${1}" != "php-fpm" ]; then
#     if [ "x${PHP_INSTALL_XDEBUG}" = "xtrue" ]; then
#         if [ "$(id -gn)" = "www-data" ]; then
#             echo "zend_extension=xdebug.so" > /usr/local/etc/php/conf.d/51-custom.ini
#         fi
#     fi
# fi
if [ "${1}" != "php-fpm" -a "x${PHP_INSTALL_XDEBUG}" = "xtrue" ]; then
    if [ "$(id -gn)" = "www-data" ]; then
        echo "zend_extension=xdebug.so" > /usr/local/etc/php/conf.d/51-custom.ini
    fi
fi

exec "$@"



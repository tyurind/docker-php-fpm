#!/bin/sh
set -e

# first arg is `-f` or `--some-option`
if [ "${1#-}" != "$1" ]; then
    set -- php-fpm "$@"
fi

if [ "${1}" != "php-fpm" ]; then
    if [ "x${PHP_INSTALL_XDEBUG}" = "xtrue" ]; then
        echo "zend_extension=xdebug.so" > /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini
    fi
fi

exec "$@"

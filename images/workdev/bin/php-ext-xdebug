#!/bin/sh

if [ ! -f /etc/php/7.1/mods-available/xdebug.ini ]; then
    echo "No find module xDebug"
    echo "   /etc/php/7.1/mods-available/xdebug.ini - not exists"
    exit 0
fi

case $1 in
    enable|ENABLE)
        cat /etc/php/7.1/mods-available/xdebug.ini > /etc/php/7.1/cli/conf.d/25-xdebug.ini
        ;;
    disable|DISABLE)
        rm -f /etc/php/7.1/cli/conf.d/25-xdebug.ini
        ;;
    *)
        echo "Usage:"
        echo "  $0 enable|disable"
        exit 1

esac

exit 0

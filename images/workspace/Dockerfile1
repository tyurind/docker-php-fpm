FROM fobia/php-fpm:workspace-dev

USER root

RUN rm -f /var/log/lastlog /var/log/faillog && \
    touch /etc/service/sshd/down && \
    usermod -s /bin/bash workuser && \
    passwd -d laradock

# Clean up
RUN /usr/sbin/install_clean

WORKDIR /var/www

USER workuser

CMD ["sudo", "/sbin/my_init"]
